{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@core/*": ["core/*"]
        },
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true, 
        "outDir":"./lib/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}